<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateService">

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="353dp"
        android:layout_height="47dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="450dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Digite aqui o nome do livro"
        android:inputType="textShortMessage"
        app:layout_constraintBottom_toTopOf="@+id/editTextAutor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonCreateElement"
        android:layout_width="109dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="463dp"
        android:text="cadastrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextDisponivel"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/editTextAnoPublicacao"
        android:layout_width="353dp"
        android:layout_height="47dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="5dp"
        android:hint="Ano de Publicação (ex: 2024)"
        app:layout_constraintBottom_toTopOf="@+id/editTextPreco"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAutor" />

    <CheckBox
        android:id="@+id/editTextDisponivel"
        android:layout_width="105dp"
        android:layout_height="52dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="15dp"
        android:text="Disponível"
        app:layout_constraintBottom_toTopOf="@+id/buttonCreateElement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextPreco" />

    <EditText
        android:id="@+id/editTextPreco"
        android:layout_width="354dp"
        android:layout_height="46dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="5dp"
        android:hint="Preço (ex: 5.50)"
        app:layout_constraintBottom_toTopOf="@+id/editTextDisponivel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextAnoPublicacao" />

    <EditText
        android:id="@+id/editTextAutor"
        android:layout_width="356dp"
        android:layout_height="46dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="5dp"
        android:ems="10"
        android:hint="Digite aqui o nome do autor"
        android:inputType="textShortMessage"
        app:layout_constraintBottom_toTopOf="@+id/editTextAnoPublicacao"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextName" />

</androidx.constraintlayout.widget.ConstraintLayout>